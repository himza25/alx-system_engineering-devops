#!/usr/bin/env bash
# This script creates a compressed MySQL dump of all databases

# Check if password argument is provided
if [ $# -eq 0 ]; then
    echo "Usage: $0 <MySQL Root Password>"
    exit 1
fi

# Variables
PASSWORD=$1
DATE=$(date +%d-%m-%Y)
BACKUP_FILE="backup.sql"
ARCHIVE_FILE="${DATE}.tar.gz"

# Perform MySQL dump of all databases and compress the dump file
mysqldump -uroot -p"$PASSWORD" --all-databases > "$BACKUP_FILE" && tar -czf "$ARCHIVE_FILE" "$BACKUP_FILE"

# Remove the original dump file
rm "$BACKUP_FILE"

# Confirmation message
echo "Backup created: $ARCHIVE_FILE"
