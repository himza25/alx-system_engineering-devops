#!/usr/bin/env bash

# Check if the password is provided
if [ $# -eq 0 ]; then
    echo "Usage: $0 <MySQL Root Password>"
    exit 1
fi

# Variables
PASSWORD=$1
DATE=$(date +%d-%m-%Y)
BACKUP_FILE="backup.sql"
ARCHIVE_FILE="${DATE}.tar.gz"

# Create a MySQL dump of all databases
mysqldump -u root -p"$PASSWORD" --all-databases > "$BACKUP_FILE"

# Compress the dump file
tar -czf "$ARCHIVE_FILE" "$BACKUP_FILE"

# Remove the original SQL file
rm "$BACKUP_FILE"

# Feedback to the user
echo "Backup created: $ARCHIVE_FILE"
